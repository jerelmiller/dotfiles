#!/usr/bin/env bash

brew_install() {
  local formula="$1"
  local options="$2"

  if ! brew list $formula &> /dev/null; then
    brew install $formula $options
  fi
}

brew_install gh
brew_install git
brew_install fnm
brew_install jq
brew_install neovim
brew_install tmux
brew_install fzf
brew_install stow

# Ruby version manager
brew_install rbenv
brew_install ruby-build

# Used to manage elixir versions
brew_install asdf

# Autosuggestions for zsh
brew_install zsh-autosuggestions
# Better text highlighting for zsh
brew_install zsh-syntax-highlighting

# Needed for telescope.nvim
brew_install fd
brew_install ripgrep

# Formatting for lua files
brew_install stylua

# Better `cat` output
# Also used for tmux-sessionx
brew_install bat
brew_install bat-extras

# Casks
brew_install raycast --cask
